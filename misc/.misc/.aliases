alias ls="eza"
alias pl="mpv --ytdl-format='bestvideo[height<=1440]+bestaudio/best' "
alias play="cat ~/.misc/op-ed.txt | fzf-tmux | cut -d'|' -f 2 | \
            xargs mpv --profile=fast \
            --ytdl-format='bestvideo[height<=1440]+bestaudio/best'"
