alias cdroid="cd /run/user/1000/gvfs/mtp:host=realme_SM8350-IDP__SN%3AFAC71CD6_fac71cd6"
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias ga="git add "
alias gc="git commit "
alias gp="git push "
